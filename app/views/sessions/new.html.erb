<div id="login">
  <div class="span-7">&nbsp;</div>
  <div class="span-7">
    <% form_tag(:action => url(:sessions)) do %>
      <div><%= text_field :name => "username", :label => 'Username', :style => 'width:100%;' %></div>
      <div><%= password_field :name => "password",  :label => 'Password', :style => 'width:100%;' %></div>
      <div style="text-align:right;"><%= submit_button "Login" %> or <%= link_to "Cancel", url(:home) %></div>
    <% end %>
  </div><!-- /.span-7 -->
  <div class="span-7">&nbsp;</div>
</div>
