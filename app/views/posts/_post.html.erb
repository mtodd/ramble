<div id="content" class="span-14 prepend-1 colborder">
  <div id="post-<%= post.id %>" class="post">
    <div class="body"><%= textilize(post.body) %></div>
  </div>
</div>

<div id="text" class="span-7 last">
  <h3 class="title"><%= link_to post.title, url(:post, post.id) %></h3>
  <span class="created">Posted <%= relative_date(post.created_at) %></span>
  <span class="author">by <%= post.author.name rescue 'anonymous' %></span>
</div>

<hr />
