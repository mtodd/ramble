<tr id="<%= post.slug %>" class="post">
  <td class="title"><%= link_to_function post.title, "show_post('#{url(:post, :id => post.slug)}');" %></td>
  <td class="edit hidden"><%= link_to "Edit", url(:edit_admin_post, post) %></td>
  <td class="delete hidden"><%= link_to "Delete", url(:delete_admin_post, post), :onclick => "if(confirm('Sure?')){return true;}else{return false;}" %></td>
</tr>
